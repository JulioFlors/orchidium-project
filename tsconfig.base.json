{
  "compilerOptions": {
    /* Opciones base del Lenguaje */
    "target": "es6",
    "lib": ["esnext"],
    "strict": true,

    // Opciones de compatibilidad y modernidad
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* Opciones para asegurar la calidad y consistencia del código */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    /* Opciones de rendimiento del compilador */
    "skipLibCheck": true,
    "incremental": true,
    "noEmit": false,

    /* Configuración de Módulos */
    "module": "nodenext",
    "moduleResolution": "nodenext",
  },
  "exclude": ["node_modules", "**/dist", "**/.next"]
}