{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "db:generate"
      ],
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_SECRET",
        "DATABASE_URL_UNPOOLED",
        "DATABASE_URL",
        "DB_DATABASE_URL_UNPOOLED",
        "DB_DATABASE_URL",
        "DB_HOST",
        "DB_NAME",
        "DB_NEON_PROJECT_ID",
        "DB_PASSWORD",
        "DB_PGDATABASE",
        "DB_PGHOST_UNPOOLED",
        "DB_PGHOST",
        "DB_PGPASSWORD",
        "DB_PGUSER",
        "DB_PORT",
        "DB_POSTGRES_DATABASE",
        "DB_POSTGRES_HOST",
        "DB_POSTGRES_PASSWORD",
        "DB_POSTGRES_PRISMA_URL",
        "DB_POSTGRES_URL_NO_SSL",
        "DB_POSTGRES_URL_NON_POOLING",
        "DB_POSTGRES_URL",
        "DB_POSTGRES_USER",
        "DB_STACK_SECRET_SERVER_KEY",
        "DB_USER",
        "MQTT_BROKER_URL",
        "MQTT_CLIENT_ID_INGEST",
        "MQTT_CLIENT_ID_SCHEDULER",
        "MQTT_HOST",
        "MQTT_PORT"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "dependsOn": [
        "^db:generate"
      ],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "inputs": [
        "packages/database/prisma/schema.prisma"
      ],
      "outputs": [
        "packages/database/src/generated/prisma/**"
      ],
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    }
  }
}