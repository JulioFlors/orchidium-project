{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Opciones específicas para este pakage */
    "composite": true, // Habilita la compilación compuesta para que otros proyectos puedan depender de este.
    "declaration": true, // Habilita la declaración de tipos para que otros paquetes puedan usarlos.
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}