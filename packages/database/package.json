{
  "name": "@package/database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts src/client.ts --bundle --platform=node --format=esm --outdir=dist --external:@prisma/client --external:pg",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.0.1",
    "@prisma/client": "7.0.1",
    "dotenv": "17.2.3",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@types/pg": "8.15.6",
    "prisma": "7.0.1"
  },
  "files": [
    "dist",
    "src",
    "generated"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts",
    "./enums": "./src/enums.ts"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts"
}