	"private": true,
	"author": "Julio Flores",
	"e-mail": "noesjulio@gmail.com",
	"license": "MIT",
	"scripts": {
		"// ---- APLICACIÓN WEB ----": "",
		"dev": "pnpm --filter app dev",
		"build": "pnpm --filter app build",
		"start": "pnpm --filter app start",
		"lint": "pnpm --filter app lint",
		"// ---- SERVICIOS ----": "",
		"dev:ingest": "pnpm --filter @service/mqtt-data-ingest dev",
		"build:ingest": "pnpm --filter @service/mqtt-data-ingest build",
		"start:ingest": "pnpm --filter @service/mqtt-data-ingest start",
		"// ---- BASE DE DATOS ----": "",
		"db:generate": "pnpm --filter @package/database db:generate",
		"db:migrate": "pnpm --filter @package/database db:migrate",
		"db:seed": "pnpm --filter @service/seeding start",
		"// ---- HERRAMIENTAS DE MONOREPO ----": "",
		"dev:turbo": "turbo dev",
		"build:turbo": "turbo build"
	},
	"devDependencies": {
		"prisma": "6.16.1",
		"turbo": "2.5.8",
		"typescript": "^5.9.2"
	},
	"packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"@tailwindcss/oxide",
			"esbuild",
			"prisma",
			"sharp",
			"unrs-resolver"
		]
	}
}