{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Opciones específicas de Next.js */
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "jsx": "preserve",

    /* Configuración de Módulos Base */
    "module": "esnext",
    "moduleResolution": "bundler",

    "plugins": [
      {
        "name": "next"
      }
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@package/database": ["../packages/database/src/index.ts"],
      "@service/seeding": ["../services/seed/src/index.ts"]
    }
  },

  "include": ["next-env.d.ts", "nextauth.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
